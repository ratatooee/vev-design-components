# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = off
quote_type = single
curly_bracket_next_line = true
spaces_around_operators = true
continuation_indent_size = 2

[package.{json,lock}]
indent_style = space
indent_size = 2

[*.{md,css,scss,yml,js}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
